<input>

   <title>Diamond: Phonons at Gamma</title>

   <structure speciespath="./">

      <crystal scale="6.74632">
         <basevect> 0.5  0.5  0.0 </basevect>
         <basevect> 0.5  0.0  0.5 </basevect>
         <basevect> 0.0  0.5  0.5 </basevect>
      </crystal>

      <species speciesfile="C.xml" rmt="1.25">
         <atom coord="0.00 0.00 0.00" />
         <atom coord="0.25 0.25 0.25" />
      </species>

   </structure>

   <groundstate
      do="skip"
      ngridk="13 13 13"
      xctype="GGA_PBE_SOL"
      rgkmax="8.0"
      gmaxvr="18"
      nempty="20">
   </groundstate>

   <xs
      xstype="BSE"
      ngridk="5 5 5"
      rgkmax="8.0"
      lmaxapw="12"
      vkloff="0.05 0.15 0.25"
      ngridq="5 5 5"
      reduceq="false"
      nempty="20"
      gqmax="3.0"
      broad="0.0055"
      tappinfo="true"
      tevout="true" >

      <energywindow
            intv="0.0 2.0"
            points="1500" />

      <screening
            screentype="full"
            nempty="100" />

      <BSE
            bsetype="singlet"
            nstlbse="1 4 1 5"
            writepotential="true" />

      <qpointset>
         <qpoint>0.0 0.0 0.0</qpoint>
      </qpointset>

      <plan>
	 <doonly task="xsgeneigvec"/>
         <doonly task="scr_wfplot_hdf"/>
         <doonly task="writepmatxs"/>
	 <doonly task="writepmatasc"/>
	 <doonly task="scrgeneigvec"/>
         <doonly task="scrwritepmat"/>
         <doonly task="screen"/>
	 <doonly task="write_screen_hdf5"/>
	 <!--<doonly task="exccoulint"/>
         <doonly task="scrcoulint"/>
	 <doonly task="bse"/>-->
      </plan>

      <scrwfplot kptrange="1 125" bandrange="1 9">
         <plot3d>
            <box grid="20 20 20">
               <origin coord="  0.0   0.0   0.0"/>
               <point  coord="  1.0   0.0   0.0"/>
               <point  coord="  0.0   1.0   0.0"/>
               <point  coord="  0.0   0.0   1.0"/>
            </box>
         </plot3d>
      </scrwfplot>
   </xs>
</input>
